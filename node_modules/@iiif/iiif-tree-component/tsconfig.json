{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "module": "es6",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": true,
        "lib": ["es6", "dom"],
        "types": [
            "manifesto.js",
            "@iiif/manifold",
            "@iiif/base-component",
            "jquery"
        ],
        "outDir": "./dist/"
    },
    "include": [
        "src/**/*"
    ]
}